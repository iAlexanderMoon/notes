DRIVER={Client Access ODBC Driver};SYSTEM=SISTEMA;DBQ=BIPRG;DFTPKGLIB=QGPL;LANGUAGEID=ENU;PKG=QGPL/DEFAULT(IBM),2,0,1,0,512;QRYSTGLMT=-1;


SELECT APBIDTLP.NO10SI, APBIDTLP.DT10CO, APBIDTLP.DT10PR, APBIDTLP.CD10PI, APBIDTLP.TA10RE, APBIDTLP.LO10IN, APBIDTLP.SQ10TA, APBIDTLP.LO10EX, APBIDTLP.OPSONDE, APBIDTLP.CD10GR, APBIDTLP.CD10SG, APBIDTLP.AGENT, APBIDTLP.NO10LE, APBIDTLP.SEQ, APBIDTLP.PDSBRUT, APBIDTLP.PDSPAYE, APBIDTLP.PDSBAL1, APBIDTLP.PDSBAL2, APBIDTLP.INDICE, APBIDTLP.FAT, APBIDTLP.LEAN, APBIDTLP.YIELD, APBIDTLP.FLADM, APBIDTLP.FLCLEAR, APBIDTLP.FLNSONDE, APBIDTLP.FLCLASS, APBIDTLP.CDVERRAT, APBIDTLP.CREUSR, APBIDTLP.CRESTP
FROM DBAS400.BIPRG.APBIDTLP APBIDTLP
WHERE (APBIDTLP.NO10SI=80) AND (APBIDTLP.DT10CO>=20180513 And APBIDTLP.DT10CO<=20180618) And
(APBIDTLP.PDSBRUT <= 300)



using System.Data;
using Microsoft.Data.Odbc;

{
        OdbcConnection cn;
        OdbcCommand cmd;
        string MyString;

        MyString="Select * from Customers";

        cn= new OdbcConnection("Driver={SQL Server};Server=mySQLServer;UID=sa;
                               PWD=myPassword;Database=Northwind;");

        cmd=new OdbcCommand(MyString,cn);
        cn.Open();

        MessageBox.Show("Connected");

        cn.Close();
}


